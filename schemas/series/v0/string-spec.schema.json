{
  "$id": "https://goodlittlescript.github.io/schemas/series/v0/string-spec.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A string definition",
  "type": "object",
  "properties": {
    "charset": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "case": {"type": "string"},
    "min": {"type": "number"},
    "max": {"type": "number"},
    "sep": {"type": "string"},
    "seed": {"type": "number"},
    "patterns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "regexp": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
