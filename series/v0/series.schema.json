{
  "$id": "https://goodlittlescript.github.io/series/v0/series.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A series definition",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "anyOf": [
        { "$ref": "https://goodlittlescript.github.io/series/v0/line-spec.schema.json" },
        { "$ref": "https://goodlittlescript.github.io/series/v0/step-spec.schema.json" },
        { "$ref": "https://goodlittlescript.github.io/series/v0/string-spec.schema.json" }
      ]
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "array"
      }
    },
    "outputs": {
      "type": "array",
      "items": {
        "type": "array"
      }
    }
  },
  "required": [ "apiVersion", "kind" ],
  "additionalProperties": false
}
